    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/app_logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/app_icon1" />

        <TextView
            android:layout_marginLeft="15dp"
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- App Tagline -->
    <TextView
        android:id="@+id/app_tagline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Discover your dream job or internship "
        android:textStyle="bold"
        android:textSize="16sp"
        android:padding="16dp"
        tools:ignore="MissingConstraints" />

    <!-- App Description -->
    <TextView
        android:id="@+id/app_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/about_app"
        android:textSize="16sp"
        android:padding="16dp"
        tools:ignore="MissingConstraints" />

    <!-- Key Features -->
    <TextView
        android:id="@+id/key_features"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Key Features"
        android:textSize="16sp"
        android:textStyle="bold"
        android:padding="16dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/feature_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search Your Internship using Role name or Batch"
        android:textSize="16sp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_marginTop="4dp"
        android:id="@+id/feature_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="List of Top Company available and also see carrier page "
        android:textSize="16sp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        tools:ignore="MissingConstraints" />

    <!-- Meet the Team -->
    <TextView
        android:id="@+id/meet_the_team"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Meet the Team"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="12dp"
        android:layout_marginTop="10dp"
        tools:ignore="MissingConstraints" />

    <!-- Team Members -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="16dp"
        tools:ignore="MissingConstraints">


    <TextView
        android:id="@+id/shashi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shashi Ranjan Kumar"

        android:textSize="18sp"
        android:textStyle="bold"
        />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >
        <ImageView
            android:id="@+id/s_github"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/github" />

        <ImageView

            android:id="@+id/s_linkdin"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toRightOf="@id/s_github"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/linkdin" />

            <ImageView

                android:id="@+id/s_insta"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                app:layout_constraintLeft_toRightOf="@id/s_linkdin"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/instagram" />




        </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
            android:layout_marginTop="30dp"
            android:id="@+id/suraj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Suraj Kumar Suman"

            android:textSize="18sp"
            android:textStyle="bold"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >
            <ImageView
                android:id="@+id/ss_github"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/github" />

            <ImageView

                android:id="@+id/ss_linkdin"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                app:layout_constraintLeft_toRightOf="@id/ss_github"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/linkdin" />

            <ImageView

                android:id="@+id/ss_insta"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                app:layout_constraintLeft_toRightOf="@id/ss_linkdin"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/instagram" />




        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>